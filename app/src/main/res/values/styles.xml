<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Loader">
        <item name="show">true</item>
        <item name="backgroundColor">@color/colorAccent</item>
    </style>

    <style name="Roi">
        <item name="show">true</item>
        <item name="drawable">@drawable/custom_roi_rect</item>
        <item name="showScanning">true</item>
        <item name="scanningDrawable">@drawable/custom_circular_progress</item>
    </style>

    <style name="Tick">
        <item name="show">true</item>
        <item name="linesColor">@color/colorAccent</item>
        <item name="linesWidth">5sp</item>
        <item name="durationTime">1</item>
    </style>

    <style name="AudioButton">
        <item name="show">true</item>
        <item name="drawable">@drawable/custom_volume_toggle</item>
    </style>

    <style name="Notification">
        <item name="show">true</item>
        <item name="infoDrawable">@drawable/custom_notification_info_label</item>
        <item name="warningDrawable">@drawable/custom_notification_warning_label</item>
        <item name="textSize">16sp</item>
        <item name="textColor">@android:color/white</item>
        <!--<item name="textFontPath">...</item>-->
        <!--<item name="textFontFamily">...</item>-->
        <!--<item name="textFontStyle">...</item>-->
    </style>

    <style name="MediaNotification">
        <item name="show">true</item>
        <item name="imageBackgroundColor">@color/colorPrimary</item>
        <item name="videoBackgroundColor">@color/colorPrimaryDark</item>
        <item name="acceptButtonDrawable">@drawable/custom_accept_button</item>
        <item name="titleTextSize">25sp</item>
        <item name="titleTextColor">@color/colorAccent</item>
        <!--<item name="titleTextFontPath">...</item>-->
        <!--<item name="titleTextFontFamily">...</item>-->
        <!--<item name="titleTextFontStyle">...</item>-->
        <item name="messageTextSize">22sp</item>
        <item name="messageTextColor">@android:color/black</item>
        <!--<item name="messageTextFontPath">...</item>-->
        <!--<item name="messageTextFontFamily">...</item>-->
        <!--<item name="messageTextFontStyle">...</item>-->
        <item name="buttonTextSize">18sp</item>
        <item name="buttonTextColor">@android:color/black</item>
        <!--<item name="buttonTextFontPath">...</item>-->
        <!--<item name="buttonTextFontFamily">...</item>-->
        <!--<item name="buttonTextFontStyle">...</item>-->
    </style>

    <style name="FaceDetection">
        <item name="show">true</item>
        <item name="drawable">@drawable/custom_face_detection</item>
    </style>

</resources>
