<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Loader">
        <item name="eid_show">true</item>
        <item name="eid_backgroundColor">@color/colorAccent</item>
    </style>

    <style name="Roi">
        <item name="eid_show">true</item>
        <item name="eid_drawable">@drawable/custom_roi_rect</item>
        <item name="eid_showScanning">true</item>
        <item name="eid_scanningDrawable">@drawable/custom_circular_progress</item>
    </style>

    <style name="Tick">
        <item name="eid_show">true</item>
        <item name="eid_linesColor">@color/colorAccent</item>
        <item name="eid_linesWidth">5sp</item>
        <item name="eid_durationTime">1</item>
    </style>

    <style name="AudioButton">
        <item name="eid_show">true</item>
        <item name="eid_drawable">@drawable/custom_volume_toggle</item>
    </style>

    <style name="Notification">
        <item name="eid_show">true</item>
        <item name="eid_infoDrawable">@drawable/custom_notification_info_label</item>
        <item name="eid_warningDrawable">@drawable/custom_notification_warning_label</item>
        <item name="eid_textSize">16sp</item>
        <item name="eid_textColor">@android:color/white</item>
        <!--<item name="eid_textFontPath">...</item>-->
        <!--<item name="eid_textFontFamily">...</item>-->
        <!--<item name="eid_textFontStyle">...</item>-->
    </style>

    <style name="MediaNotification">
        <item name="eid_show">true</item>
        <item name="eid_imageBackgroundColor">@color/colorPrimary</item>
        <item name="eid_videoBackgroundColor">@color/colorPrimaryDark</item>
        <item name="eid_acceptButtonDrawable">@drawable/custom_accept_button</item>
        <item name="eid_titleTextSize">25sp</item>
        <item name="eid_titleTextColor">@color/colorAccent</item>
        <!--<item name="eid_titleTextFontPath">...</item>-->
        <!--<item name="eid_titleTextFontFamily">...</item>-->
        <!--<item name="eid_titleTextFontStyle">...</item>-->
        <item name="eid_messageTextSize">22sp</item>
        <item name="eid_messageTextColor">@android:color/black</item>
        <!--<item name="eid_messageTextFontPath">...</item>-->
        <!--<item name="eid_messageTextFontFamily">...</item>-->
        <!--<item name="eid_messageTextFontStyle">...</item>-->
        <item name="eid_buttonTextSize">18sp</item>
        <item name="eid_buttonTextColor">@android:color/black</item>
        <!--<item name="eid_buttonTextFontPath">...</item>-->
        <!--<item name="eid_buttonTextFontFamily">...</item>-->
        <!--<item name="eid_buttonTextFontStyle">...</item>-->
    </style>

    <style name="FaceDetection">
        <item name="eid_show">true</item>
        <item name="eid_drawable">@drawable/custom_face_detection</item>
    </style>

</resources>
